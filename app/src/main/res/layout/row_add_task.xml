<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rat_lin_layout"
    android:layout_width="410dp"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg_2_1"
        android:paddingEnd="35dp">

        <EditText
            android:id="@+id/et_tn"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:hint="Task Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"></EditText>

        <EditText
            android:id="@+id/et_strt"
            android:layout_width="229dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="5dp"
            android:hint="Start Time"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"></EditText>

        <EditText
            android:id="@+id/et_fnsh"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="127dp"
            android:layout_marginRight="5dp"
            android:hint="End Time"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"></EditText>

        <ImageView
            android:id="@+id/image_remove"
            android:layout_width="39dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="347dp"
            android:layout_marginLeft="380dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="146dp"
            app:srcCompat="@drawable/ic_close" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="98dp"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="293dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="54dp"
            app:srcCompat="@drawable/ic_bubble_chart" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>